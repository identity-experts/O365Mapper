                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:_365Drive.Office365.NotificationManager">
    <LinearGradientBrush x:Key="MenuBackground"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="White"
                      Offset="1" />
        <GradientStop Color="White"
                      Offset="0.259" />
    </LinearGradientBrush>


    


